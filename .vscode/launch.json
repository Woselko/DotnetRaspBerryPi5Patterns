    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "LedBlinkingApp_deploy",
            "name": "LedBlinkingApp Launch (remote)",
            "type": "coreclr",
            "request": "launch",

            "program": "/home/woselko/.dotnet/dotnet",
            "args": [
                "/home/woselko/LedBlinkingApp/LedBlinkingApp.dll"
            ],

            "cwd": "/home/woselko/LedBlinkingApp",
            "console": "integratedTerminal",
            "externalConsole": false,
            "internalConsoleOptions": "openOnFirstSessionStart",
            "stopAtEntry": false,

            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}",
                "pipeProgram": "ssh",
                "pipeArgs": [
                    "woselko@192.168.0.87"
                ],
                "debuggerPath": "/home/woselko/vsdbg/vsdbg"
            }
